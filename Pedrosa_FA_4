students = int(input("Enter number of students: "))
subjects = int(input("\nEnter number of subjects: "))

class_total = 0
class_count = 0

for s in range(1, students + 1):
    print(f"\nStudent {s}")
    student_total = 0

    for sub in range(1, subjects + 1):
        score = float(input(f"Enter score {sub}: "))
        student_total += score
        class_total += score
        class_count += 1

    student_average = student_total / subjects
    print(f"Average for Student {s} = {student_average}")

class_average = class_total / class_count
print(f"\nClass Average = {class_average}")
